      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      },
      "isBackground": true
    },
    {
      "label": "Run API (watch)",
      "type": "shell",
      "command": "dotnet watch run",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Api"
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "watch"
      },
      "isBackground": true
    },
    {
      "label": "Run Client (watch)",
      "type": "shell",
      "command": "dotnet watch run",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Client"
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "watch"
