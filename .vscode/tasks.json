{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run API",
      "type": "shell",
      "command": "dotnet run",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Api"
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      },
      "isBackground": true
    },
    {
      "label": "Run Client",
      "type": "shell",
      "command": "dotnet run",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Client"
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      },
      "isBackground": true
    },
    {
      "label": "Run API (watch)",
      "type": "shell",
      "command": "dotnet watch run",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Api"
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "watch"
      },
      "isBackground": true
    },
    {
      "label": "Run Client (watch)",
      "type": "shell",
      "command": "dotnet watch run",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Client"
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "watch"
      },
      "isBackground": true
    },
    {
      "label": "Run Gateway",
      "type": "shell",
      "command": "dotnet run",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Gateway"
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "dev"
      },
      "isBackground": true
    },
    {
      "label": "Run Gateway (watch)",
      "type": "shell",
      "command": "dotnet watch run",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Gateway"
      },
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "watch"
      },
      "isBackground": true
    },
    {
      "label": "Run All",
      "dependsOn": [
        "Run API",
        "Run Client"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run All (watch)",
      "dependsOn": [
        "Run API (watch)",
        "Run Client (watch)"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build Tailwind CSS",
      "type": "shell",
      "command": "npm run css:build",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Client"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Watch Tailwind CSS",
      "type": "shell",
      "command": "npm run css:watch",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Client"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "watch"
      },
      "isBackground": true
    },
    {
      "label": "Run All with Gateway (watch)",
      "dependsOn": [
        "Run Gateway (watch)",
        "Run API (watch)",
        "Run Client (watch)",
        "Watch Tailwind CSS"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run All with Tailwind (watch)",
      "dependsOn": [
        "Run API (watch)",
        "Run Client (watch)",
        "Watch Tailwind CSS"
      ],
      "problemMatcher": []
    },
    {
      "label": "Seed Database (10k users)",
      "type": "shell",
      "command": "dotnet run --project InstagramClone.Seeder -- --users 10000 --posts 1",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "Seed Database (small - 100 users)",
      "type": "shell",
      "command": "dotnet run --project InstagramClone.Seeder -- --users 100 --posts 2",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "Seed Database (custom)",
      "type": "shell",
      "command": "dotnet run --project InstagramClone.Seeder -- --users ${input:userCount} --posts ${input:postsPerUser}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    }
  ],
  "inputs": [
    {
      "id": "userCount",
      "type": "promptString",
      "description": "Number of users to seed",
      "default": "1000"
    },
    {
      "id": "postsPerUser",
      "type": "promptString",
      "description": "Number of posts per user",
      "default": "1"
    }
  ]
}
