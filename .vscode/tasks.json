      "problemMatcher": []
    },
    {
      "label": "Run All (watch)",
      "dependsOn": [
        "Run API (watch)",
        "Run Client (watch)"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build Tailwind CSS",
      "type": "shell",
      "command": "npm run css:build",
      "options": {
        "cwd": "${workspaceFolder}/InstagramClone.Client"
      },
      "problemMatcher": [],
