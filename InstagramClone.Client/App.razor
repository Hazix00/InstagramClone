<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized Context="routeAuthContext">
                    <AuthorizeView>
                        <NotAuthorized>
                            <RedirectToLogin />
                        </NotAuthorized>
                        <Authorized Context="userAuthContext">
                            <p role="alert">@UI.Error_NotAuthorized</p>
                        </Authorized>
                    </AuthorizeView>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <PageTitle>@UI.Error_NotFound</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">@UI.Error_NotFoundMessage</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
