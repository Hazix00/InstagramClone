{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "ApiKey": "your-secret-gateway-key-change-in-production"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5245",
      "https://localhost:7245"
    ]
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "realtime-route": {
        "ClusterId": "realtime-cluster",
        "Match": {
          "Path": "/hubs/{**catch-all}"
        }
      },
      "storage-route": {
        "ClusterId": "storage-cluster",
        "Match": {
          "Path": "/storage/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5203"
          }
        }
      },
      "realtime-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5204"
          }
        }
      },
      "storage-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5205"
          }
        }
      }
    }
  }
}
